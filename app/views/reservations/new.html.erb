<div class="py-3 w-50 m-auto">
  <h1>New reservation!</h1>
    <%= simple_form_for [@restaurant, @reservation] do |f| %>
      <div class="d-flex w-100 justify-content-between">
        <%= f.input :time, as: :time %>
      </div>
      <%= f.hidden_field :date, value: @date %>
      <%= f.input :number_of_people, collection: 1..@restaurant.capacity - @restaurant.occupation_for(@date) %>
      <%= f.submit "Reserve", class: "btn btn-primary mb-3" %>
    <% end %>
    <%= link_to "Go back!", user_path(current_user), class: "btn btn-dark" %>
</div>
