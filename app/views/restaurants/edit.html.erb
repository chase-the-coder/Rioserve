<div class="w-50 m-auto">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category %>
    <%= f.input :price_range, as: :select, collection: (1..5) %>
    <%= f.input :capacity %>
    <%= f.button :submit, 'Save', class: 'btn btn-dark' %>
    <%= link_to "back", user_path(current_user), class: "btn btn-outline-secondary" %>
  <% end %>
</div>
