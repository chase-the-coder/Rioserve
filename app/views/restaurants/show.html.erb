<div class="container mt-4 text-center">
  <h1 class=""><%= @restaurant.name %></h1>
  <%= image_tag @restaurant.image, {id: 'restaurant-image', class: 'pb-4'}  %>

  <div class="d-flex justify-content-around mb-4">
    <p>rating: <%= @restaurant.rating %></p>
    <p>price: <%= @restaurant.price_range %></p>
    <p>category: <%= @restaurant.category %></p>
    <p>address: <%= @restaurant.address %></p>
    <p>capacity: <%= @restaurant.capacity %></p>
  </div>
  <div class="">
    <div>
      <h5><u>Description</u></h5>
      <p class="text-left"><%= @restaurant.description %></p>
    </div>
    <div
      class=""
      id="map"
      style="width: 100%;
      height: 300px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>


  <% message = user_signed_in? ?  'Make Reservation' : 'Login to make a Reservation' %>
  <div class="m-4">
    <%= link_to message, new_restaurant_reservation_path(@restaurant), class: 'btn btn-dark' %>
    <% if user_signed_in? %>
      <%= link_to "Back", user_path(current_user), class: 'btn btn-danger' %>
    <% else %>
      <%= link_to "Back", restaurants_path, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>

