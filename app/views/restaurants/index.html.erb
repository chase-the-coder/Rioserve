<% if @searched == true %>
  <h2 class="text-center">Here are your results:</h2>
<% else %>
  <h2 class="text-center">All restaurants</h2>
<% end %>
<div class="cards categories-cards">
  <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant) do %>
        <div class="card-shadow card-restaurant card-grow w-100">
          <% if image_tag(restaurant.image)  %>
            <%= image_tag(restaurant.image) %>
          <% end %>
          <div class="card-restaurant-infos">
            <div>
              <h2><%= truncate restaurant.name, length: 25, separator: /\w+/ %></h2>
              <p><%= restaurant.category %></p>
            </div>
            <h2 class="card-restaurant-pricing"><%= "$" * restaurant.price_range.to_i %></h2>
          </div>
        </div>
      <% end %>
  <% end %>
</div>
