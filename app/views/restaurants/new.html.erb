<div class="w-50 m-auto">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category %>
    <%= f.input :rating %>
    <%= f.input :price_range, as: :select, collection: ['$', '$$', '$$$', '$$$$', '$$$$$'] %>
    <%= f.input :capacity %>
    <%= f.button :submit %>
  <% end %>
</div>
