    <% end %>

    <%= link_to restaurants_path(query: "steak", search_filter: "bycategory") do %>
      <div class="card card-grow" style="background-image: url(https://cdn-image.foodandwine.com/sites/default/files/styles/4_3_horizontal_-_1200x900/public/rib-eye-steak-au-poivre-xl-200202.jpg?itok=V64uhOvr)">
        Steak
      </div>
    <% end %>

    <%= link_to restaurants_path(query: "italian", search_filter: "bycategory") do %>
      <div class="card card-grow" style="background-image: url(https://img.manoramaonline.com/content/dam/mm/en/food/foodie/images/2020/1/26/lasagna.jpg)">
        Italian
      </div>
    <% end %>

  </div>



</div>

<div class="text">
  <h2 class="justify-left mt-5">Trending Restaurants</h2>
  <%= link_to "See All", restaurants_path, class: "see-all" %>
</div>

<div class="main-container">
  <div class="categories-cards">
    <% @restaurants.each_with_index do |restaurant, index| %>
      <%= link_to restaurant_path(restaurant) do %>
        <div class="card-shadow card-restaurant card-grow">
          <%= image_tag(restaurant.image) %>
          <div class="card-restaurant-infos">
            <div>
              <h2><%= truncate restaurant.name, length: 25, separator: /\w+/ %></h2>
              <p><%= restaurant.category %></p>
            </div>
            <h2 class="card-restaurant-pricing"><%= "$" * restaurant.price_range.to_i %></h2>
          </div>
        </div>
      <% end %>
      <% break if index >= 7 %>
    <% end %>
  </div>

</div>
