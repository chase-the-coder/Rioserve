      <div class="card card-grow" style="background-image: url(https://img.jakpost.net/c/2017/02/28/2017_02_28_22453_1488267265._large.jpg)">
        Japanese
      </div>
    <% end %>

    <%= link_to restaurants_path(query: "bar food", search_filter: "bycategory") do %>
      <div class="card card-grow" style="background-image: url(https://cdnimg.webstaurantstore.com/uploads/buying_guide/2014/11/barfood-beerchicken.jpg)">
        Bar Food
      </div>
    <% end %>

    <%= link_to restaurants_path(query: "french", search_filter: "bycategory") do %>
      <div class="card card-grow" style="background-image: url(https://thumbor.thedailymeal.com/6-ZtETfEmjy2WZiA87cyuA_qiTI=/870x565/https://www.thedailymeal.com/sites/default/files/story/0_Intro_5_escargot%20de%20bougogne_marcmayer-Shutterstock.jpg)">
